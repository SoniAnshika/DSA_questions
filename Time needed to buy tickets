class Solution {
public:
    int timeRequiredToBuy(vector<int>& tickets, int k) {
        int result=0;
        while(1){
            for(int i=0;i<tickets.size();i++){
                if(tickets[i]==0){
                    continue;
                }
                tickets[i]--;
                result++;
                if(tickets[k]==0){
                    return result;
                }
            }
        }
        return 0;
    }
};
