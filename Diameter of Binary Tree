class Solution {
public:
    int diameterOfBinaryTree(TreeNode* root) {
        //Here we are finding left height and right height for each one of the node and updating the max variable for every level.
        int diameter = 0;
        findHeight(root, diameter);
        return diameter;
        
    }
    
    int findHeight(TreeNode* root, int& diameter) {
        if(root == NULL) return 0;
        
        int lh = findHeight(root->left, diameter);
        int rh = findHeight(root->right, diameter);
        
        diameter = max(diameter, lh+rh);
        
        return 1 + max(lh, rh);
    }
};
