/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *detectCycle(ListNode *head) {
        
        if(head==NULL)
            return head;
        
        ListNode *fast=head,*slow=head,*temp=head;
        while(fast && fast->next)
        {
            fast=fast->next->next;
            slow=slow->next;
            
            if(fast==slow)
            {
                while(slow!=temp)
                {
                    slow=slow->next;
                    temp=temp->next;
                }
                
                return temp;
            }
                
        }
        
        return NULL;
    }
};
